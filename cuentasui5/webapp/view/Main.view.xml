<mvc:View controllerName="jrs.cuentasui5.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page"
                    title="{i18n>title}">
                    <content>
                        <!-- <Text id="text1" text="Hola"></Text> -->

                        <Wizard id="CreateProductWizard"
                            class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                            complete="wizardCompletedHandler">
                            <WizardStep id="Step1"
                                title="Descripción de la consulta"
                                validated="true">
                                <MessageStrip id="mstrip1" class="sapUiSmallMarginBottom"
                                    text="Digite los datos básicos de la consulta"
                                    showIcon="true" />
                                <Text id="texto1" class="sapUiSmallMarginBottom"
                                    text="aaa" />
                            </WizardStep>
                            <WizardStep id="Step2"
                                title="Parámetros de selección"
                                validated="true">
                                <MessageStrip id="mstrip2" class="sapUiSmallMarginBottom"
                                    text="Digite los parámetros"
                                    showIcon="true" />
                                <Text id="texto2" class="sapUiSmallMarginBottom"
                                    text="aaa" />
                            </WizardStep>
                            <WizardStep id="Step3"
                                title="Selección de campos"
                                validated="true">
                                <MessageStrip id="mstrip3" class="sapUiSmallMarginBottom"
                                    text="Digite los datos básicos de la consulta"
                                    showIcon="true" />
                                <Text id="texto3" class="sapUiSmallMarginBottom"
                                    text="aaa" />
                            </WizardStep>
                        </Wizard>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
